{
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["node", "express", "multer", "cors"]
  },
  "include": ["src/**/*"],
  "ts-node": {
    "transpileOnly": true,
    "files": true
  }
}
